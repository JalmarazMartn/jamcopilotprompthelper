{
    "name": "jamcopilotpromptmanager",
    "displayName": "JAM Copilot Prompt Manager",
    "description": "Create and save new small prompts for co-pilot",
    "publisher": "JessAlmarazMartin",
    "version": "0.0.6",
    "repository": "https://github.com/JalmarazMartn/jamcopilotprompthelper",
    "icon": "images/PromptManager.png",
    "engines": {
        "vscode": "^1.70.0"
    },
    "categories": [
        "Other"
    ],
    "author": {
        "name": "Jesús Almaraz Martín",
        "email": "JalmarazMartn@gmail.com"
    },
    "activationEvents": [
    ],
    "main": "./extension.js",
    "contributes": {
        "commands": [
            {
                "command": "jamcopilotpromptmanager.createPrompt",
                "title": "JAM Copilot Prompt Manager"
            },
            {
                "command": "jamcopilotpromptmanager.beginAutomatePtompt",
                "title": "JAM Copilot Prompt Manager: Begin prompt recording"
            },
            {
                "command": "jamcopilotpromptmanager.endAutomatePtompt",
                "title": "JAM Copilot Prompt Manager: End prompt recording"
            }
               ,
               {
                   "command": "jamcopilotprompthelper.bringPromptToInstructions",
                   "title": "Bring Prompt To Instructions",
                   "category": "JamCopilotPromptHelper"
               }
        ],
        "menus": {
            "editor/context": [
				{
					"when": "editorHasSelection && jamcopilotpromptmanager.dontShowNow",
					"group": "1_modification",
					"command": "jamcopilotpromptmanager.endAutomatePtompt"
				},
                {
					"when": "editorHasSelection&& jamcopilotpromptmanager.dontShowNow",
					"group": "1_modification",
					"command": "jamcopilotpromptmanager.beginAutomatePtompt"
				}
			],
            "commandPalette": [
                {
                    "command": "jamcopilotpromptmanager.createPrompt"
                },
                {
                    "command": "jamcopilotpromptmanager.beginAutomatePtompt",
                    "when": "editorHasSelection"
                },
                {
                    "command": "jamcopilotpromptmanager.endAutomatePtompt",
                    "when": "editorHasSelection && jamcopilotpromptmanager.enableEndAutomate"
                }                
            ]
        },
        "configuration": {
            "title": "JAM Copilot Prompt Manager",
            "properties": {
                "jamcopilotpromptmanager.modelVendor": {
                    "type": "string",
                    "default": "copilot",
                    "description": "Vendor of language model to use"
                },
                "jamcopilotpromptmanager.modelFamily": {
                    "type": "string",
                    "default": "gpt-4o",
                    "enum": ["gpt-3.5-turbo", "gpt-4o-mini", "gpt-3.5","gpt-4","gpt-4o","o3-mini","claude-3.5-sonnet","gemini-2.0-flash"],
                    "description": "Family of language model to use"
                },
                "jamcopilotpromptmanager.promptOfPrompts": {
                    "type": "array",
                    "description": "Prompt to get other prompts, given the code before and after",                    
                    "items": 
                        {
                            "type": "string"
                        }
                    ,
                    "default": ["You are a code assistant that helps to create prompts for co-pilot. You will be given a code change and you will generate a prompt to apply the change in the code.",
                    " The prompt should be clear and concise, focusing on the modifications made to the code.",
                    " The prompt should be in a format that can be reused in future prompts and understandable by co-pilot to apply changes or suggestions.",
                    "The inputs are the code with the label of before and the code with the label of after." ,
                    " Explain the changes made in the code between Before section and After section." ],                    
                    "editPresentation": "singlelineText"
                    
                }
            }
        },
        "languageModelTools": [
            {
                "name": "leer-portapapeles",
                "tags": ["clipboard", "utilidades", "leer portapapeles", "read clipboard", "clipboard content","contenido del portapapeles"],
                "toolReferenceName": "leerPortapapeles",
                "displayName": "Leer portapapeles-Read clipboard",
                "modelDescription": "Lee el contenido actual del portapapeles usando la API de VS Code. Read the current clipboard content using the VS Code API.",
                "canBeReferencedInPrompt": true,
                "icon": "$(clippy)",
                "inputSchema": {
                    "type": "object",
                    "properties": {}
                }
            }
        ]
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "node ./test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.70.0",
        "@types/glob": "^7.1.4",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.17.27",
        "eslint": "^8.1.0",
        "glob": "^7.1.7",
        "mocha": "^9.1.3",
        "typescript": "^4.4.4",
        "@vscode/test-electron": "^1.6.2"
    }
}