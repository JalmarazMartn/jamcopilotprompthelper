{
    "name": "jamcopilotprompthelper",
    "displayName": "JAMCopilotPromptHelper",
    "description": "Create and save new small prompts for co-pilot",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.70.0"
    },
    "categories": [
        "Other"
    ],
    "author": {
        "name": "Jesús Almaraz Martín",
        "email": "JalmarazMartn@gmail.com"
    },
    "activationEvents": [
    ],
    "main": "./extension.js",
    "contributes": {
        "commands": [
            {
                "command": "jamcopilotprompthelper.createPrompt",
                "title": "JAM Copilot Prompt Manager"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "jamcopilotprompthelper.createPrompt"
                }
            ]
        },
        "configuration": {
            "title": "JAM Copilot Prompt Helper",
            "properties": {
                "jamcopilotprompthelper.modelVendor": {
                    "type": "string",
                    "default": "copilot",
                    "description": "Vendor of language model to use"
                },
                "jamcopilotprompthelper.modelFamily": {
                    "type": "string",
                    "default": "gpt-4o",
                    "description": "Family of language model to use"
                }
            }
        }
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "node ./test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.98.0",
        "@types/glob": "^7.1.4",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.17.27",
        "eslint": "^8.1.0",
        "glob": "^7.1.7",
        "mocha": "^9.1.3",
        "typescript": "^4.4.4",
        "@vscode/test-electron": "^1.6.2"
    }
}